@model CarFormViewModel

@{
    ViewData["Title"] = "Add new car";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="Make">Make</label>
                <input asp-for="Make" type="text" class="form-control" required />
                <span asp-validation-for="Make" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Model">Model</label>
                <input asp-for="Model" type="text" class="form-control" required />
                <span asp-validation-for="Model" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance">Travelled Distance</label>
                <input asp-for="TravelledDistance" type="number" min="0" class="form-control" required />
                <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartIds"></label>
                <select asp-for="PartIds" class="mdb-select form-group" multiple">
                    @foreach (var part in Model.Parts)
                    {
                        <option value="@part.Value">@part.Text</option>
                    }
                </select>
                <span asp-validation-for="PartIds" class="form-text text-danger"></span>
            </div>

            <div>
                <input type="submit" class="btn btn-success" value="Save Car" />
            </div>
        </form>
    </div>
</div>