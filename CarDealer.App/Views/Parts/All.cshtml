@model CarDealer.App.Models.Parts.PartsPageListingViewModel

@{
    ViewData["Title"] = "All Parts";
}

<h2>
    @ViewData["Title"]

    <a class="btn btn-primary btn-lg top-right" href="/parts/create">Add Part</a>
</h2>



<ul class="pagination">
    <li class="page-item"><a class="page-link" href="/parts/all?page=@Model.PreviousPage">Previous</a></li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(Model.CurrentPage == @i ? "active" : string.Empty)"><a class="page-link" href="/parts/all?page=@i">@i</a></li>
    }
    <li class="page-item"><a class="page-link" href="/parts/all?page=@Model.NextPage">Next</a></li>
</ul>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Supplier
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model.Parts)
        {
            <tr>
                <td>
                    @part.Name
                </td>
                <td>
                    @part.Price.ToString("F2") $
                </td>
                <td>
                    @part.Quantity
                </td>
                <td>
                    @part.SupplierName
                </td>
                <td>
                    <a class="btn btn-warning" href="/Parts/Edit/@part.Id">Edit</a>
                    <a class="btn btn-danger" href="/Parts/Delete/@part.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


