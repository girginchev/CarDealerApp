@model IEnumerable<SaleListServiceModel>

@{
    ViewData["Title"] = "All Sales";
}

<h2>All Sales</h2>

<h3><a href="/sales/discounted">Show only discounted sales</a></h3>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Customer
            </th>
            <th>
                Discount
            </th>
            <th>
                Price
            </th>
            <th>
                Discounted Price
            </th>
            <th>
            </th>
        </tr>
        </thead>
    <tbody>
        @foreach (var sale in Model)
        {
        <tr>
            <td>
                @sale.CustomerName
            </td>
            <td>

                @(((sale.Discount + (sale.IsYoungDriver ? 0.05 : 0)) * 100).ToString("F2"))%
            </td>
            <td>
                @sale.Price.ToString("F2") $
            </td>
            <td>
                @sale.DiscountedPrice.ToString("F2") $
            </td>
            <td>
                <a href="/sales/@sale.Id">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
